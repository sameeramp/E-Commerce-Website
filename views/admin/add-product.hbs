<body>



  <div class="container border mt-5 w-50  ">
    <h1 class="ms-5 my-4  text-white  text-center">ADD PRODUCT</h1>

    <form action="/admin/add-product" enctype="multipart/form-data" method="post" class="needs-validation ms-5"
      novalidate>
      <div class="form-row">
        <div class="col-md-4 mb-3">
          <label for="validationCustom01" class="text-white">Name of Product</label>
          <input type="text" name="product_name" class="form-control inputbox " style="width: 30rem;" id="validationCustom01"
            placeholder="name of the product" value="" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>









        <div class="col-md-4 mb-3">
          <label for="validationCustom02" class="text-white">Description</label>
          <textarea id="validationCustom02" name="product_description" class="form-control inputbox "
            style="width: 30rem; height:5rem" rows="4" cols="50" placeholder="discription" value="" required>

  </textarea>


          {{!-- <input type="text" name="product_description" class="form-control " style="width: 30rem; height:5rem"
            id="validationCustom02" placeholder="discription" value="" required> --}}
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

      </div>
      <div class="form-row">
        <div class="col-md-6 mb-3 text-white">
          <div class="custom-file">
            <input type="file" name="Image" class="custom-file-input  inputbox" id="customFile">
            <label class="custom-file-label text-white" for="customFile">Add image here</label>
          </div>
        </div>
        <div class="col-md-3 mb-3 ">
          <label for="validationCustom04">Prize</label>
          <input type="number" name="prize" class="form-control text-white inputbox" id="validationCustom04" placeholder="prize"
            required>
          <div class="invalid-feedback">
            Please provide a valid prize.
          </div>

        </div>



      </div>

      <button class="btn btn-success mb-3" type="submit">ADD PRODUCT</button>
    </form>
  </div>
</body>


<style>
  body {

    background-color: #152733;
    font-family: sans-serif;

  },
  .inputbox{
  border-radius: 10px;
},


  
</style>