<body>
  


<div class="container border mt-3 w-50 ">
  <h1 class="ms-5 my-4 text-white text-center ">EDIT PRODUCT</h1>

    <form action="/admin/edit-product/{{product._id}}" enctype="multipart/form-data" method="post"  class="needs-validation ms-5" novalidate >
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationCustom01" class="text-white">Name of Product</label>
      <input type="text" name="product_name"style="width: 30rem;" class="form-control" id="validationCustom01"  value="{{product.product_name}}" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

 <div class="col-md-4 mb-3">
          <label for="validationCustom02" class="text-white">Description</label>
          <textarea id="validationCustom02" name="product_description" class="form-control inputbox "
            style="width: 30rem; height:5rem" rows="4" cols="50" placeholder="discription" value="{{product.product_description}}" required>
            {{product.product_description}}

  </textarea>


          {{!-- <input type="text" name="product_description" class="form-control " style="width: 30rem; height:5rem"
            id="validationCustom02" placeholder="discription" value="" required> --}}
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>


    {{!-- <div class="col-md-4 mb-3">
      <label for="validationCustom02">Description</label>
      <input type="text" name="product_description" class="form-control text-white" id="validationCustom02"  value="{{product.product_description}}" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
     --}}
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
     <div class="custom-file">
  <input type="file" name="Image" class="custom-file-input text-white" id="customFile" onchange="viewImage(event)">
  <img src="/product-image/{{product._id}}.jpeg" alt="" style="height:5rem; width:5rem; " class="mt-2 "  id="imgView">
  <label class="custom-file-label text-white "  for="customFile">Add image here</label>
</div>
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationCustom04" class="text-white">prize</label>
      <input type="number" name="prize" class="form-control" id="validationCustom04" required value="{{product.prize}}">
      <div class="invalid-feedback">
        Please provide a valid prize.
      </div>

    </div>

    
    
  </div>
  
  <button class="btn btn-primary mb-3" type="submit">EDIT PRODUCT</button>
</form>
</div>

</body>
<script>

  function viewImage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
</script>

