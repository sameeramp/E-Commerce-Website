<body>
<div>
  
    <div class=" container loginpage primary  border form  mt-5  form-content w-50 box-shadow" >
      <div style=" ">
      <h1 class="mt-5 mb-5  text-white ">LOGIN </h1>

      <form action="/login" method="post" class="">
        {{#if loginErr}}
        <p class="text-danger">{{loginErr}}</p>
        {{/if}}
        <p class="text-white mt-3 me-5">Please Enter Your Email & Password</p>
        <div class="mb-3">
          <input type="email" style="width: 70%;" class="form-control ms-5 inputbox" name="Email" id="exampleInputEmail1"
            aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
          <input type="password" style="width: 70%;" class="form-control ms-5 inputbox"   name="Password" id="myInput" value=""  > 


 <input type="checkbox" class="text-white " onclick="myFunction()"><span class="text-white">show password</span>
          

        </div>

        <button type="submit" class="btn btn-primary loginbutton text-white">LOGIN</button>
        <div class="d-flex">
          <p class="small fw-bold mt-5 pt-1 mb-0 signup text-white">Don't have an account? <a href="/signup"
              class="link-danger ">Signup</a></p>
          <p class="small fw-bold mt-5 pt-1 mb-0 ms-5 text-white">Forgott Password? <a href="#" class="link-danger">Click here</a>
          </p>
        </div>

      </form>
    </div>
    </div>
  </div>
</body>

<script>

  function myFunction() {
    var x = document.getElementById("myInput");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>

